<% @messages.each do |message| %>
  <div class="message">
    <h3><a href="/messages/<%= message.id %>"><%= message.author %></a> : </h3>
    <small><p>Created at: <%= message.created_at %></p></small>
    <p>
      <%= message.content %>
    </p>
    <p>
      <a href = "<%= message.url %>"><%= message.url %></a>
    </p>
  </div>
<% end %>